{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "sourceMap": false,
      "strict": true,
      "lib": ["es2017", "dom"],
      "experimentalDecorators": true,
      "typeRoots": ["node_modules/@types", "src/types"],
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "outDir": "lib",
      "removeComments": true
    },
    "exclude": [
      "node_modules",
      "out",
      "lib"
    ]
  }