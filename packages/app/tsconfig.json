{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "sourceMap": false,
      "strict": true,
      "lib": ["es2017", "dom"],
      "experimentalDecorators": true,
      "typeRoots": ["node_modules/@types", "types"],
      "noImplicitAny": false,
      "removeComments": true,
      "paths": {
        "atoms/*": ["components/atoms/*"],
        "molecules/*": ["components/molecules/*"],
        "organisms/*": ["components/organisms/*"],
        "templates/*": ["components/organisms/*"],
        "static/*": ["static/*"]
      }
    },
    "exclude": [
      "node_modules",
      "out",
      ".next"
    ]
  }