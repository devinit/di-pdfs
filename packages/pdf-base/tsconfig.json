{
    "compilerOptions": {
      "jsx": "react",
      "sourceMap": false,
      "strict": true,
      "lib": ["es2017", "dom"],
      "declaration": true,
      "declarationDir": "lib",
      "experimentalDecorators": true,
      "typeRoots": ["node_modules/@types", "src/types"],
      "noImplicitAny": false,
      "rootDir": "src",
      "baseUrl": ".",
      "noUnusedLocals": true,
      "paths": {
        "react": ["node_modules/@types/react"]
      },
      "outDir": "lib",
      "removeComments": true
    },
    "exclude": [
      "node_modules",
      "lib"
    ]
  }